<h1><%= @user.name %>の気温パターン</h1>

<ul>
  <% @temps.each do |temp| %>
    <li class="temp-list">
      <h4>
        <%= link_to temp.name, temp_path(temp) %>
        <% if current_user == @user %>
          <span class="dropdown">
            <button type="button" class="btn btn-light" data-toggle="dropdown">
              <i class="fas fa-align-justify"></i>
            </button>
            <div class="dropdown-menu">
              <%= link_to '編集', edit_temp_path(temp), class: 'dropdown-item' %>
              <%= link_to '削除', temp, method: :delete, data: { confirm: 'You sure?' }, class: 'dropdown-item' %>
            </div>
          </span>
        <% end %>
          <%= temp.min %>~<%= temp.max %>°Cのとき
      </h4>
      <% temp.temps_category.each do |category| %>
        <span class="badge badge-info"><%= category.name %></span>
      <% end %>
    </li>
  <% end %>
</ul>

<% if current_user == @user %>
  <%= link_to '新規気温パターンを作る', new_temp_path, class: 'ml-3 btn btn-success' %>
<% end %>