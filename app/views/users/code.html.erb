<h1><%= @user.name %>の気温パターン</h1>

<ul>
  <% @temps.each do |temp| %>
    <li>
      <%= temp.min %>以上<%= temp.max %>
      <% if current_user == @user %>
        <%= link_to "削除", temp, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
      <% end %>
    </li>
  <% end %>
</ul>

<% if current_user == @user %>
  <%= link_to '新規気温パターンを作る', new_temp_path %>
<% end %>