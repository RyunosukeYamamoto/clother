<% if temp.have_category?(category) %>
  <%= form_with(model: temp.relationship_temps.find_by(category_id: category.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :temp_id, temp.id %>
    <%= hidden_field_tag :category_id, category.id %>
    <%= f.submit '解除', class: 'btn btn-danger btn-block' %>
  <% end %>
<% else %>
  <%= form_with(model: temp.relationship_temps.build, local: true) do |f| %>
    <%= hidden_field_tag :temp_id, temp.id %>
    <%= hidden_field_tag :category_id, category.id %>
    <%= f.submit '追加', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>