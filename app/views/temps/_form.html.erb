<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: temp, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
  
      <div class="form-group">
        <%= f.label :name, '名称' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :max, '上限温度' %>
        <%= f.number_field :max, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :min, '下限温度' %>
        <%= f.number_field :min, class: 'form-control' %>
      </div>
      <%= f.submit '登録', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>