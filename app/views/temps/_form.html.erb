<%= form_with(model: temp, local: true) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="app">
    <div class="form-name">
      <%= f.label :name, '名称' %>
      <%= f.text_field :name, class: 'name' %>
    </div>
    <div class="form-name">
      <%= f.label :max, '上限温度' %>
      <%= f.number_field :max, class: 'name' %>
    </div>
    <div class="form-name">
      <%= f.label :min, '下限温度' %>
      <%= f.number_field :min, class: 'name' %>
    </div>
    <%= f.submit '登録', class: 'btn btn-success' %>
  </div>
<% end %>