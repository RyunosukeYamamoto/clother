<% if cloth.categorized?(category) %>
  <%= form_with(model: cloth.relationship_categories.find_by(category_id: category.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :category_id, category.id %>
    <%= hidden_field_tag :cloth_id, cloth.id %>
    <%= f.submit '解除', class: 'btn btn-danger btn-block' %>
  <% end %>
<% else %>
  <%= form_with(model: cloth.relationship_categories.build, local: true) do |f| %>
    <%= hidden_field_tag :category_id, category.id %>
    <%= hidden_field_tag :cloth_id, cloth.id %>
    <%= f.submit '追加', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>