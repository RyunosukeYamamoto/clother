<div>
  <%= @post.user.name %><br>
  <%= image_tag @post.image.url %>
  <p><%= @post.description %></p>
  <h2>このコーデに含まれる服</h2>
  <ul class="cloths">
    <%= render 'cloths/cloths', cloths: @post.wearing_cloths %>
  </ul>
  
  <% if current_user == @post.user %>
    <h4><%= link_to '投稿を編集', edit_post_path(@post), class: 'btn btn-success' %></h4>
  <% end %>
</div>